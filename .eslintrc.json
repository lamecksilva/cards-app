{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": "airbnb",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018
	},
	"plugins": ["react"],
	"rules": {
		"no-console": "off",
		"import/no-extraneous-dependencies": "warn",
		"linebreak-style": "off"
	}
}
